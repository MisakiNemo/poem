<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.poem.mapper.UserMapper">


    <select id="selectUserByUsernameAndPassword" resultType="com.example.poem.entity.User">
        select *
        from users
        where username = #{username}
          and password = #{password}
    </select>
    <select id="selectUserByUsername" resultType="com.example.poem.entity.User">
        select *
        from users
        where username = #{username}
    </select>
</mapper>